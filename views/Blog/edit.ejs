<% layout('layouts/boilerplate')%>

    <div class="row">
        <h1 class="text-center">New Blog</h1>
        <div class="col-6 offset-3">
            <form action="/<%= blog._id %>?_method=PUT" method="POST" novalidate class="needs-validation">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="title" value="<%= blog.title %> " required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="categories">Categories</label>
                    <input class="form-control" type="text" id="categories" name="categories"
                        value="<%= blog.categories %> " required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="content">Content</label>
                        <textarea class="form-control" type="text" id="content" name="content"
                            required><%= blog.content %> </textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-success">Edit Blog</button>
                    </div>
            </form>
        </div>
    </div>